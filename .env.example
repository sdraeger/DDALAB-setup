# DDALAB Environment Configuration
# Copy this file to .env and update all values for your deployment

# === SECURITY WARNING ===
# CHANGE ALL PASSWORDS AND SECRETS BEFORE DEPLOYING TO PRODUCTION!
# Generate secure passwords using: openssl rand -base64 32

# Application Settings
ENVIRONMENT=production
DDALAB_IMAGE=sdraeger1/ddalab:latest

# Domain Configuration
DOMAIN=localhost
PUBLIC_URL=https://localhost
HTTP_PORT=80
HTTPS_PORT=443

# Next.js Application URLs
NEXT_PUBLIC_API_URL=https://localhost/api-backend
NEXT_PUBLIC_APP_URL=https://localhost
NEXTAUTH_URL=https://localhost

# Database Configuration
DB_USER=ddalab
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_NAME=ddalab

# MinIO Object Storage
MINIO_ROOT_USER=ddalab_minio
MINIO_ROOT_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Authentication Secrets
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# Authentication Mode
# Options: local, ldap, oauth
DDALAB_AUTH_MODE=local

# LDAP Configuration (if DDALAB_AUTH_MODE=ldap)
LDAP_SERVER_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=CHANGE_ME_LDAP_PASSWORD
LDAP_USER_BASE=ou=users,dc=example,dc=com
LDAP_GROUP_BASE=ou=groups,dc=example,dc=com

# OAuth Configuration (if DDALAB_AUTH_MODE=oauth)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=CHANGE_ME_OAUTH_SECRET
OAUTH_ISSUER=https://your-oauth-provider.com

# Backup Configuration (optional)
BACKUP_SCHEDULE=@daily
BACKUP_KEEP_DAYS=7
BACKUP_KEEP_WEEKS=4
BACKUP_KEEP_MONTHS=6

# Logging
TRAEFIK_LOG_LEVEL=ERROR

# Monitoring Configuration (optional)
# Uncomment to enable monitoring with custom ports
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3005
# GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Resource Limits (optional)
# Uncomment to set memory limits
# POSTGRES_MEMORY_LIMIT=2g
# REDIS_MEMORY_LIMIT=512m
# MINIO_MEMORY_LIMIT=1g
# DDALAB_MEMORY_LIMIT=4g